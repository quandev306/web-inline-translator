{
  "manifest_version": 3,
  "name": "Inline Translator",
  "description": "Translate selected text into target language inline on any webpage with Option+T.",
  "version": "0.1.0",
  "icons": {
    "16": "assets/icons8-translate-gradient-16.png",
    "32": "assets/icons8-translate-gradient-32.png",
    "96": "assets/icons8-translate-gradient-96.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": [
        "data/settings.json",
        "data/languages.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
